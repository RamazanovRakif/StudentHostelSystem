@model ChangePasswordVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.min.css">
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto col-md-5 mt-5">
            <div class="card-header">Change Password</div>
            <div class="card-body">
                <form method="post" asp-action="ChangePassword" asp-controller="Account">
                    <div class="form-group">
                        <label asp-for="OldPassword" for="exampleInputPassword1">Old Password</label>
                        <input asp-for="OldPassword" class="form-control" id="exampleInputPassword1" type="password" placeholder="Old Password">
                        <span asp-validation-for="OldPassword" class="text-danger red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="exampleInputPassword1">Password</label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" for="exampleInputPassword1">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger red"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger red"></div>
                    <input type="submit" class="btn btn-primary btn-block" name="forsubmit" href="index.html" value="Save">
                </form>
                <div class="text-center ">
                    <a class="d-block small " asp-action="Index" asp-controller="Home">Back</a>
                </div>
            </div>
        </div>
    </div>
</body>