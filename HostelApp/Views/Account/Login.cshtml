@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.min.css">
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto col-md-5 mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <form method="post" asp-action="Login" asp-controller="Account">
                    <div class="form-group">
                        <label asp-for="Email" for="exampleInputEmail1">Email address</label>
                        <input asp-for="Email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="exampleInputPassword1">Password</label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger red"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" type="checkbox"> Remember me
                            </label>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger red"></div>
                    <input type="submit" class="btn btn-primary btn-block" name="forsubmit" href="index.html" value="Login">
                </form>
                <div class="text-center ">
                    <label class="small">Don't have an account?</label>
                    <a class="d-inline small " asp-controller="Account" asp-action="Register">Register</a>
                </div>
                <div class="text-center ">
                    <a class="d-block small forgot-password" asp-action="ForgetPassword">Forgot Password?</a>
                </div>
                <div class="text-center ">
                    <a class="d-block small " asp-action="Index" asp-controller="Home">Back</a>
                </div>
            </div>
        </div>
    </div>
</body>