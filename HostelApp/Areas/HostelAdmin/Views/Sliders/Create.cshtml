@model Slider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HostelAdmin/Views/Shared/_AdminLayout.cshtml";
}

    <form asp-area="HostelAdmin" asp-controller="Sliders" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group col-lg-4">
            <div id="imgPreview">
                <img src="" style=" border:1px solid black; height:200px; width:100%;" id="image">
            </div>
            <input style="margin-top:5px" ; accept="image/*" asp-for="Photo" type="file" onchange="showImage.call(this)" />
            <span class="text-danger red" asp-validation-for="Photo"></span>
        </div>
        <div class="col-lg-8">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <input type="text" asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success btn-block btn-lg" value="Create" />
        </div>
    </form>
    <div class="col-lg-12">
        <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin:30px 0">
            <i class="fas fa-long-arrow-alt-left"></i>Back to Index
        </a>
    </div>