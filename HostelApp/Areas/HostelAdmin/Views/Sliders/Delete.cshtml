@model Slider
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/HostelAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-group col-lg-4">
    <div id="imgPreview">
        <img src="~/images/slider/@Model.Image" style=" border:1px solid black; height:200px; width:100%;" id="image">
    </div>
</div>
<div class="col-lg-8">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input type="text" asp-for="Title" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input type="text" asp-for="Content" disabled class="form-control" />
    </div>
    <form method="post" asp-area="HostelAdmin" asp-action="Delete" asp-controller="Sliders">
        <div class="alert alert-danger">
            <p style="padding-top:0;">Are you sure delete this slider?</p>
        </div>
        <input type="submit" class="btn btn-danger btn-block btn-lg" value="Delete" />
    </form>
</div>
<div class="col-lg-12">
    <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin:30px 0">
        <i class="fas fa-long-arrow-alt-left"></i>Back to Index
    </a>
</div>