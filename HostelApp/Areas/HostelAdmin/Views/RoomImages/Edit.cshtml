@model RoomImage
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/HostelAdmin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-area="HostelAdmin" asp-controller="RoomImages" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div id="imgPreview">
            <img src="~/images/room/@Model.Image" style=" border:1px solid black; height:500px; width:100%;" id="image">
        </div>
        <input style="margin-top:5px" ; accept="image/*" asp-for="Photo" type="file" onchange="showImage.call(this)" />
        <span class="text-danger red" asp-validation-for="Photo"></span>
    </div>
    <div class="col-lg-8">
        <input type="submit" class="btn btn-success btn-block btn-lg" value="Edit" />
    </div>
</form>
<div class="col-lg-12">
    <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin:30px 0">
        <i class="fas fa-long-arrow-alt-left"></i>Back to Index
    </a>
</div>