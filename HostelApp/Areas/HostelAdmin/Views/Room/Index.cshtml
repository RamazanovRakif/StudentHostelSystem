@model IEnumerable<Room>
@{
    ViewBag.Title = "Room";
    Layout = "~/Areas/HostelAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row my-3">
    <div class="col-12">
        <a asp-area="HostelAdmin" asp-controller="Room" asp-action="Create" class="btn btn-primary btn-block">
            <i class="fas fa-plus"></i> Create New Room
        </a>
    </div>
</div>
<table class="table table-bordered table-hover table-responsive pt-3">
    <thead>
        <tr>
            <th style="vertical-align:middle; text-align:center;">Room Number</th>
            <th style="vertical-align:middle; text-align:center;">Category</th>
            <th style="vertical-align:middle; text-align:center;">Price</th>
            <th style="vertical-align:middle; text-align:center;">Bed count</th>
            <th style="vertical-align:middle; text-align:center;">Reserved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td style="vertical-align:middle; text-align:center;">@room.RoomNumber</td>
                <td style="vertical-align:middle; text-align:center;">@room.Category.CategoryName</td>
                <td style="vertical-align:middle; text-align:center;">@room.Price</td>
                <td style="vertical-align:middle; text-align:center;">@room.BedCount</td>
                <td style="vertical-align:middle; text-align:center;">@room.IsReserved</td>
                <td style="vertical-align:middle; text-align:center;">
                    <a asp-area="HostelAdmin" asp-controller="Room" asp-action="Details" asp-route-id="@room.ID" class="btn btn-success"><i class="fas fa-eye"></i></a>
                    @if (Model.Count() > 1)
                    {
                        <a asp-area="HostelAdmin" asp-controller="Room" asp-action="Edit" asp-route-id="@room.ID" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                        <a asp-area="HostelAdmin" asp-controller="Room" asp-action="Delete" asp-route-id="@room.ID" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

